<table class="table table-hr">

  <% if current_account && current_account.gatheringies.include?(account) %>
    <tr>
      <td>Email</td>
      <td>
        <a target="_blank" href="mailto:<%=account.email%>"><%=account.email%></a>
      </td>  
    </tr> 

    <% if account.phone %>
      <tr>
        <td>Phone</td>
        <td>
          <a target="_blank" href="tel:<%=account.phone%>"><%=account.phone%></a>
        </td>  
      </tr>
    <% end %>       

    <% if account.telegram_username %>
      <tr>
        <td>Telegram</td>
        <td>
          <a target="_blank" href="https://t.me/<%=account.telegram_username%>"><%=account.telegram_username%></a>
        </td>  
      </tr>
    <% end %>    

    <% if account.website %>
      <tr>
        <td>Website</td>
        <td>
          <a target="_blank" href="<%=account.website%>"><%=account.website%></a>
        </td>  
      </tr>
    <% end %>    

  <% end %>   
      
  <% if account.facebook_profile_url %>
    <tr>
      <td>Facebook</td>
      <td>
        <a target="_blank" href="<%=account.facebook_profile_url%>"><%=account.facebook_profile_url.include?('profile.php') ? account.facebook_profile_url.split('/')[2..-1].join('/').gsub('www.','') : account.facebook_profile_url.split('/')[3..-1].join('/').split('?').first%></a>
      </td>  
    </tr>
  <% end %>       

  <% if account.website %>
    <tr>
      <td>Website</td>
      <td>
        <a target="_blank" href="<%=account.website%>"><%=account.website%></a>
      </td>  
    </tr>
  <% end %>     
   
  <% if account.date_of_birth %>
    <tr>
      <td>Age</td>
      <td>
        <%=account.age%>
      </td>  
    </tr>
  <% end %> 


  <% if account.sexuality %>
    <tr>
      <td>Sexuality</td>
      <td>
        <%=account.sexuality%>
      </td>  
    </tr>
  <% end %>   

  <% if account.gender %>
    <tr>
      <td>Gender</td>
      <td>
        <%=account.gender%>
      </td>  
    </tr>
  <% end %>     

  <% if account.location %>
    <tr>
      <td>Location</td>
      <td>
        <%=account.location%>
      </td>  
    </tr>     
  <% end %>

  <% if account.open_to.count > 0 %>
    <tr>
      <td>Open to</td>
      <td>
        <%=account.open_to.map { |x| %Q{<a href="/connect?open_to_#{x}=true" class="text-white label label-primary d-inline-block mb-1 mb-sm-0">#{x.humanize}</a>} }.join(' ') %>
      </td>  
    </tr> 
  <% end %>

  <% if account.last_active %>
    <tr>
      <td>Last active</td>
      <td>
        <%=time_ago_in_words account.last_active%> ago
      </td>  
    </tr> 
  <% end %>

</table>     