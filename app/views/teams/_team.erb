<% if @team.intro %>
  <div style="margin-bottom: 20px">
    <%= @team.intro %>
  </div>
<% end %>

<% if @team.budget %>
  <div style="margin-bottom: 20px">
    <i class="fa fa-money"></i> This team has spent <%=@group.currency_symbol%><%=@team.spent%> of a budget of <%=@group.currency_symbol%><%= @team.budget %>
  </div>
<% end %>

<div data-pagelet-url="/h/<%=@group.slug%>/commentable?commentable_type=Team&commentable_id=<%=@team.id%>">
  <%= partial :'comments/commentable', :locals => {:commentable => @team} %>
</div>

<div style="text-align: center">
  <%= will_paginate @posts, :renderer => WillPaginate::ViewHelpers::BootstrapRenderer %>
</div> 
