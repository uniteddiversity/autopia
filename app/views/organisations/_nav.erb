
<% if organisation.persisted? && organisation_assistant?(organisation) %>
  <div class="mb-3">
    <%= ul_nav [
      [organisation.name, "/organisations/#{organisation.id}"],
      (['Edit organisation', "/organisations/#{organisation.id}/edit"] if organisation_admin?((organisation))),      
      (['Event stats', "/organisations/#{organisation.id}/events/stats"]  if organisation_admin?((organisation))),
      (['Tiers', "/organisations/#{organisation.id}/tiers"] if organisation_admin?((organisation))),
      ([%Q{Members <span class="badge badge-primary">#{organisation.organisationships.count}</span>}, "/organisations/#{organisation.id}/members"] if organisation_admin?((organisation))),
      (['Map', "/organisations/#{organisation.id}/map"] if organisation.organisationships.count < 1000 && organisation_admin?((organisation))),
      ['Mailer', "/organisations/#{organisation.id}/pmails"]      
      ].compact, ul_class: 'nav nav-tabs', li_class: 'nav-item', a_class: 'nav-link' %>
  </div>
<% end %>

