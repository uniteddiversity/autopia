<div class="row no-gutters">
  <div class="col-12 col-sm-auto mr-3">
    <% if @organisation.image %>
      <img src="<%=@organisation.image.thumb('200x200').url%>" />
    <% else %>
      <div style="height: 200px; width: 200px; border: 2px solid #343a40;"></div>
    <% end %>
  </div>
  <div class="col">
    <h1>
      <%= @organisation.name %>
    </h1>
    <div class="mb-2">
      <% if organisation_admin? %>
        <a class="btn btn-primary" href="/organisations/<%=@organisation.id%>/edit"><i class="fa fa-pencil"></i> Edit organisation</a>
      <% end %>
    </div>
    <table class="table table-hr">
      <% if @organisation.website %>
        <tr>
          <td>Website</td>
          <td>
            <a target="_blank" href="<%=@organisation.website%>"><%=@organisation.website%></a>
          </td>
        </tr>
      <% end %>
      <tr>
        <td>Created by</td>
        <td>
          <a href="/u/<%=@organisation.account.username%>"><%=@organisation.account.name%></a>
        </td>
      </tr>
    </table>
    <% if organisationship = @organisation.organisationships.find_by(account: current_account) %>
      <a class="btn btn-danger" href="/organisationships/<%=organisationship.id%>/destroy">Disconnect your Stripe account from <%=@organisation.name%></a>
    <% elsif current_account %>
      <a class="btn btn-success" href="https://connect.stripe.com/oauth/authorize?response_type=code&client_id=<%=@organisation.stripe_client_id%>&scope=read_write">Connect your Stripe account to <%=@organisation.name%></a>
    <% end %>
  </div>
</div>

<h2 class="mt-5">Team members</h2>
<%= partial :'accounts/add', locals: {
  role: 'team member',
  accounts: @organisation.team_members.order('name asc'),
  add_and_remove: organisation_admin?,
  new_object: Organisationcrown.new,
  new_url: "/organisations/#{@organisation.id}/organisationcrowns/new",
  destroy_url: "/organisations/#{@organisation.id}/organisationcrowns/destroy"
  }  %>

<% if @organisation.organisationships.count > 0 %>
  <h2 class="mt-5">Connected to this organisation</h2>
  <div class="image-wall">
    <% @organisation.clients.order('name asc').each { |account|  %>
      <%= partial :'accounts/square', :locals => {:account => account, :width => '50px'} %>
    <% } %>
  </div>
<% end %>

<h2 class="mt-5">Activities</h2>
<a class="btn btn-primary mb-3" href="/activities/new?organisation_id=<%=@organisation.id%>">Create an activity</a>
<% activities = @organisation.activities.paginate(:page => params[:page], :per_page => 50) %>
<%= partial :'activities/blocks', :locals => {:activities => activities} %>
<div class="mt-3">
  <%= will_paginate activities, :param_name => 'activities_page', :inner_window => 0, :outer_window => 0, :renderer => WillPaginate::ViewHelpers::BootstrapRenderer %>
</div>  


<h2 class="mt-5">Events</h2>
<a class="btn btn-primary mb-3" href="/events/new?organisation_id=<%=@organisation.id%>">Create an event</a>
<% events = @organisation.events.future.paginate(:page => params[:page], :per_page => 50) %>
<%= partial :'events/blocks', :locals => {:events => events} %>
<div class="mt-3">
  <%= will_paginate events, :param_name => 'events_page', :inner_window => 0, :outer_window => 0, :renderer => WillPaginate::ViewHelpers::BootstrapRenderer %>
</div>