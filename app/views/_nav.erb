<script>
  $(function () {
<% if @gathering %>
      $('.sub-menu a[href="/a/<%=@gathering.slug%>"]').parent().addClass('active')
<% end %>
  })
</script>
<ul class="nav">
  <li style="height: 0.5rem"></li>
  <% if current_account %>
    <li class="d-md-none has-sub">
      <a href="javascript:;">
        <b class="caret caret-right pull-right"></b>
        <i class="fa fa-user"></i>
        <span><%=current_account.name%></span>
      </a>
      <%= partial :'nav_profile', locals: {ul_class: 'sub-menu'} %>
    </li>
  <% end %>
  <li class="<%='active' if request.path == '/'%>">
    <a href="/">
      <% if current_account %>
        <i class="fa fa-fw fa-newspaper-o"></i>
        <span class="nav-link-text">Newsfeed</span>
      <% else %>
        <i class="ti-home"></i>
        <span class="nav-link-text">Home</span>
      <% end %>
    </a>
  </li>
  <li class="<%='active' if request.path == '/places'%>">
    <a href="/places">
      <i class="fa fa-fw fa-map-marker"></i>
      <span class="nav-link-text">Places</span>
    </a>
  </li>
  <li class="<%='active' if request.path == '/rooms'%>">
    <a href="/rooms">
      <i class="fa fa-fw fa-cube"></i>
      <span class="nav-link-text">Rooms</span>
    </a>
  </li>
  <li class="<%='active' if request.path == '/connect'%>">
    <a href="/connect">
      <i class="fa fa-heart-o"></i>
      <span class="nav-link-text">Connect</span>
    </a>
  </li>
  <li class="<%='active' if request.path == '/events'%>">
    <a href="/events">
      <i class="fa fa-calendar-o"></i>
      <span class="nav-link-text">Events</span>
    </a>
  </li>     
  <% if !current_account %>
    <li class="<%='active' if request.path == '/organisations'%>">
      <a href="/organisations">
        <i class="fa fa-flag"></i>
        <span class="nav-link-text">Organisations</span>
      </a>
    </li>
  <% else %>
    <li class="has-sub <%='active' if @organisation%>">
      <a href="javascript:;">
        <b class="caret caret-right pull-right"></b>
        <i class="fa fa-flag"></i>
        <span>Organisations</span>
      </a>
      <%= ul_nav (Organisation.where(:id.in => current_account.organisationships.pluck(:organisation_id) + (@organisation && @organisation.persisted? ? [@organisation.id] : [])).sort_by { |organisation| organisation.name }.map { |organisation| [organisation.name, "/organisations/#{organisation.id}"] } + [['All organisations', '/organisations']]),
        ul_class: 'sub-menu',
        li_class: '',
        li_active_class: 'active',
        a_class: '',
        a_active_class: ''
    %>
    </li>
  <% end %>      
  <% if !current_account %>
    <li class="<%='active' if request.path == '/gatherings'%>">
      <a href="/gatherings">
        <i class="fa fa-moon-o"></i>
        <span class="nav-link-text">Gatherings</span>
      </a>
    </li>
  <% else %>
    <li class="has-sub <%='active' if @gathering%>">
      <a href="javascript:;">
        <b class="caret caret-right pull-right"></b>
        <i class="fa fa-moon-o"></i>
        <span>Gatherings</span>
      </a>
      <%= ul_nav (current_account.memberships.select { |membership| membership.gathering == @gathering or !membership.hide_from_sidebar }.sort_by { |membership| membership.gathering.name }.map { |membership| [membership.gathering.name, "/a/#{membership.gathering.slug}"] } + [['All gatherings', '/gatherings']]),
        ul_class: 'sub-menu',
        li_class: '',
        li_active_class: 'active',
        a_class: '',
        a_active_class: ''
    %>
    </li>
  <% end %>
  <% if admin? %>
    <li class="nav-divider"></li>
    <li class="nav-header">Stats</li>
    <li>
      <a href="/stats/comments">
        <i class="fa fa-fw fa-comments"></i>
        <span class="nav-link-text">Comments</span>
      </a>
    </li>
    <li>
      <a href="/stats/accounts">
        <i class="fa fa-fw fa-user"></i>
        <span class="nav-link-text">Accounts</span>
      </a>
    </li>
  <% end %>
  <li class="nav-divider"></li>
  <li>
    <a target="_blank" href="https://opencollective.com/autopia">
      <i class="fa fa-fw fa-money"></i>
      <span class="nav-link-text">Support us on OpenCollective</span>
    </a>
  </li>
  <li>
    <a target="_blank" href="http://slack.autopia.co/">
      <i class="fa fa-fw fa-slack"></i>
      <span class="nav-link-text">Join our Slack</span>
    </a>
  </li>
  <li>
    <a target="_blank" href="https://github.com/stephenreid321/autopia">
      <i class="fa fa-fw fa-github"></i>
      <span class="nav-link-text">View the code on Github</span>
    </a>
  </li>
</ul>
