<div class="activity" data-attendances-count="<%=activity.attendances.count%>" data-activity-id="<%=activity.id%>" style="z-index: 99; margin-bottom: 10px; background: linear-gradient( rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4) ), url('<%=activity.image.try(:url)%>'); background-size: cover; background-position: center center; position: relative;">  
  <div style="position: absolute; bottom: 10px; left: 10px; color: white">
    <h3 style="color: white; margin-top: 0; margin-bottom: 0; position: relative" data-toggle="tooltip">
      <a href="/a/<%=@gathering.slug%>/activities/<%=activity.id%>"><%=activity.name%></a>
    </h3>
    <% if activity.description %>
      <span style="display: none"><%=activity.description.gsub("\n","<br />").truncate(150) %></span>
    <% end %>
    <span style="color: white">by <a href="/accounts/<%=activity.account_id%>"><%=activity.account.name%></a></span>
    <div>
      <div style="display: inline-block" data-pagelet-url="/activities/<%=activity.id%>/attendees"></div>
    </div>
  </div>  
  <div style="position: absolute; right: 10px; bottom: 10px; color: white">
    <% if activity.comments.count > 0 %>
      <a data-toggle="tooltip" title="<%=pluralize(activity.comments.count, 'comment')%>" href="/a/<%=@gathering.slug%>/activities/<%=activity.id%>"><i class="fa fa-comment"></i> <%=activity.comments.count%></a>
      &middot; 
    <% end %>    
    <% if activity.space_id and (@membership.admin? or activity.timetable.scheduling_by_all) %>  
      <a class="pagelet-trigger" data-confirm="Are you sure you want to unschedule this activity?" title="Unschedule" href="/activities/<%=activity.id%>/unschedule"><i class="fa fa-calendar-minus-o"></i></a>
      &middot;
    <% end %>      
    <a title="Edit" href="/activities/<%=activity.id%>/edit"><i class="fa fa-pencil"></i></a>      
  </div>  
</div>
