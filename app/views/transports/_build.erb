<% form_for @transport, @transport.new_record? ? "/a/#{@gathering.slug}/transports/new" : "/a/#{@gathering.slug}/transports/#{@transport.id}/edit" do |f| %>
  <%= f.text_block :name %>
  <%= f.text_area_block :description %>
  <%= f.datetime_block :outbound_departure_time %>
  <%= f.datetime_block :return_departure_time %>
  <% if @membership.admin? %>
    <%= f.number_block :cost %>
  <% end %>
  <%= f.number_block :capacity %>
  <%= f.submit_block destroy_url: "/a/#{@gathering.slug}/transports/#{@transport.id}/destroy" %>
<% end %>
